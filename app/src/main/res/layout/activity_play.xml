<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA52E"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        layout="@layout/actionbar_common"
        android:layout_width="match_parent"
        android:layout_height="72dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:src="@drawable/cattuong" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/anhboder" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="412dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/anwser0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_suppost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFF"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/anwser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/anwser1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnda1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/tile_hover" />

                <Button
                    android:id="@+id/btnda2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/tile_hover" />

                <Button
                    android:id="@+id/btnda3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/tile_hover" />

                <Button
                    android:id="@+id/btnda4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/tile_hover" />

                <Button
                    android:id="@+id/btnda5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/tile_hover" />

                <Button
                    android:id="@+id/btnda6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/tile_hover" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/anwser2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1.2"
                android:gravity="center|top"
                android:orientation="horizontal" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_tiep"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/nutxanh"
            android:text="Bá» qua"
            android:textColor="#FFF"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:background="@drawable/te"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/plan1"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tl1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="T"></Button>

                <Button

                    android:id="@+id/btn_tlb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="B"></Button>

                <Button
                    android:id="@+id/tl2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="O"></Button>

                <Button
                    android:id="@+id/tl4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="O"></Button>

                <Button
                    android:id="@+id/tl5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="A"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/plan2"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tl3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="H"></Button>

                <Button
                    android:id="@+id/btn_tlL"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="L"></Button>

                <Button
                    android:id="@+id/tl6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="I"></Button>

                <Button
                    android:id="@+id/btn_tlC"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="C"></Button>

                <Button
                    android:id="@+id/btn_tlP"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tile_empty"
                    android:text="P"></Button>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>